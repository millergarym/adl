{
    "adlc": "0.0.0",
    "use_embedded_sys_loader": true,
    "runtimes": [
        {
            "ts_runtime": {
                "output_dir": "./generated/runtime",
                "npm_pkg_name": "@adl-lang/runtime"
            }
        }
    ],
    "use": [
        {
            "ref": {
                "embedded": {
                    "alias": "sys"
                }
            },
            "ts_opts": {
                "npm_pkg_name": "@adl-lang/sys",
                "npm_version": "1.0.0",
                "extra_dependencies": {
                    "base64-js": "^1.5.1"
                },
                "extra_dev_dependencies": {
                    "tsconfig": "workspace:*",
                    "typescript": "^4.9.3"
                },
                "runtime_opts": {
                    "workspace_ref": "@adl-lang/runtime"
                },
                "outputs": {
                    "gen": {
                        "output_dir": "./generated/sys",
                        "manifest": "./generated/sys/.adl-manifest",
                        "strip_first": true
                    }
                },
                "include_resolver": true
            }
        },
        {
            "ref": {
                "dir": {
                    "path": "./adl/lib"
                }
            },
            "ts_opts": {
                "npm_pkg_name": "@adl-lang/common",
                "extra_dev_dependencies": {
                    "tsconfig": "workspace:*",
                    "typescript": "^4.9.3"
                },
                "runtime_opts": {
                    "workspace_ref": "@adl-lang/runtime"
                },
                "outputs": {
                    "gen": {
                        "output_dir": "./generated/common",
                        "manifest": "./generated/common/.adl-manifest",
                        "strip_first": true
                    }
                },
                "include_resolver": true
            }
        },
        {
            "ref": {
                "dir": {
                    "path": "./adl/proj"
                }
            },
            "ts_opts": {
                "npm_pkg_name": "@adl-lang/protoclient",
                "generate_transitive": false,
                "extra_dependencies": {
                    "base64-js": "^1.5.1"
                },
                "extra_dev_dependencies": {
                    "tsconfig": "workspace:*",
                    "typescript": "^4.9.3"
                },
                "runtime_opts": {
                    "workspace_ref": "@adl-lang/runtime"
                },
                "outputs": {
                    "gen": {
                        "output_dir": "./generated/protoclient",
                        "manifest": "./generated/protoclient/.adl-manifest",
                        "strip_first": true
                    }
                },
                "include_resolver": true
            }
        }
    ]
}
